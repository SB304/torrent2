	<select id="selectBoardByNo" parameterType="int" 
	                             resultType="boardVO">
	    select *         
		  from tbl_board  
		 where bno = #{bno}
	</select>
	
	<select id="selectBoardCount" parameterType="pageVO" resultType="int">
    	select count(*)
          from tbl_board 
    </select> 
	
	<!-- ################################# -->
    <!-- 파일 부분 시작 -->	
    <!-- ################################# -->
    <insert id="insertFile" parameterType="fileVO">
		insert into tbl_file ( 
			bno,         
			oriName, 
			sysName, 
			path, 
			size
		) values (
			#{bno}, 
			#{oriName}, 
			#{sysName},
			#{path}, 
			#{size}		
		)
	</insert>

	
	<select id="selectFileByNo" parameterType="int" resultType="fileVO">
	    select fno,
	    	   bno,
	           oriName,
	           sysName,
	           path,
	           size
	      from tbl_file
	     where bno = #{bno}      
	</select>  
	
	<!-- 댓글 처리 DAO 시작 -->
	<!-- ################################# -->	
	<insert id="insertReply" parameterType="replyVO">
		insert into tbl_reply(
			bno, id, content
		) values (
			#{bno}, #{id}, #{content}
		)
	</insert>
	
	<select id="selectReplyByNo" parameterType="int" resultType="replyVO">
	    select rno,
	           bno,
	           id,
	           content,
	           regDate
	      from tbl_reply
	     where bno = #{bno}      
	</select>
	
	<delete id="deleteReply" parameterType="int">
	    delete 
	      from tbl_reply
	     where rno = #{rno}
	</delete>
	
	<update id="updateReply" parameterType="replyVO">
	    update tbl_reply
	       set content = #{content}
	     where rno = #{rno}
	</update>
	
	
	<!-- 추천수  -->
	<select id="countLike" parameterType="int" resultType="int">
	select count(*)
	from tbl_like
	where bno=#{bno}
	</select>
	
	<select id="checkLike" parameterType="likeVO" resultType ="likeVO">
	select *
	from tbl_like
	where bno=#{bno} and id=#{id}
	</select>

	<insert id="insertLike">
		insert into tbl_like(
			bno, id
		) values (
			#{bno},#{id}
		)
	</insert>
	<delete id="deleteLike">
	    delete 
	      from tbl_like
	     where bno = #{bno} and id=#{id}
	</delete>
	           

		
</mapper>



































